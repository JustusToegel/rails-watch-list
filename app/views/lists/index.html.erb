<div class = "container">
  <div class="d-flex flex-row justify-content-around align-items-center bd-highlight mb-3">
    <div class="p-2 bd-highlight">
      <h2>List of lists</h2>
    </div>
    <div class="p-2 bd-highlight">
      <%= link_to "create new list", new_list_path, class: "btn btn-gradient" %>
    </div>
  </div>


  <div class="cards">
    <% @lists.each do |list| %>
      <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= cl_image_path list.photo.key %>)">
        <%= link_to list.name, list_path(list) %>
      </div>
    <% end %>
  </div>
</div>

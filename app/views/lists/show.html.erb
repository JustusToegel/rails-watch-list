<h2> <%= @list.name %></h2>

<%= link_to "Add a movie to this list", new_list_bookmark_path(@list) %>


<div class='row justify-content-center'>
  <% @list.movies.each do |movie| %>
    <div class="col-4">
      <%= image_tag movie.poster_url, height: 200 %>
      <h4><%= movie.title %></h4>
    </div>
  <% end %>
</div>

<p><%= link_to "back to -List of lists-", lists_path %></p>
